<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androApp.fulltopia.fulltopia.CommunitiesActivities.SelectedCommunity">

    <TextView
        android:id="@+id/TV_CommunityName"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/community_title"
        android:textAllCaps="false"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:id="@+id/TV_CommunityAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/AdminName"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/TV_CommunityName"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/TV_CommunityAdminName"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="13dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/TV_CommunityAdmin"
        app:layout_constraintTop_toBottomOf="@+id/TV_CommunityName" />

    <TextView
        android:id="@+id/TV_CommunityDescription"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/Description"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/TV_CommunityAdminName"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/BTN_SubscribeToCommunity"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="318dp"
        android:text="@string/community_subscribe"
        app:layout_constraintTop_toBottomOf="@+id/TV_CommunityDescription"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/BTN_UnsubscribeToCommunity"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="318dp"
        android:text="@string/community_unsubscribe"
        app:layout_constraintTop_toBottomOf="@+id/TV_CommunityDescription"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/BTN_CommunitiesActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="26dp"
        android:text="@string/activity_communities"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_CommunityDescription" />

    <RelativeLayout
        android:layout_width="383dp"
        android:layout_height="73dp"
        android:background="?attr/colorPrimary"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="324dp"
            android:layout_height="62dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/selected_communauty"
            android:textSize="35dp"
            android:textColor="@color/grey_300"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
