<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fulltopia.fulltopia.ActivitiesActivities.Selected_activity">

    <TextView
        android:id="@+id/TV_TitleActivity"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/activity_title"
        android:textAllCaps="false"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/TV_Event_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/activity_event_date"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/TV_TitleActivity"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/TV_Deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/activity_deadline_participation"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/TV_Event_Date"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/TV_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/Address"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/TV_Deadline"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/TV_City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/City"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/TV_Address"
        app:layout_constraintTop_toBottomOf="@+id/TV_Deadline" />

    <TextView
        android:id="@+id/TV_NPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:text="@string/NPA"
        android:textAllCaps="false"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/TV_Address" />

    <TextView
        android:id="@+id/TV_Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="46dp"
        android:text="@string/Country"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/TV_NPA"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/TV_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:text="@string/activity_description"
        android:textAllCaps="false"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="201dp" />

</android.support.constraint.ConstraintLayout>
